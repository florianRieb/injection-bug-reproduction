package de.netzebw.service;

import java.util.List;

import javax.enterprise.context.ApplicationScoped;

import de.netzebw.data.IncidentRepositry;
import de.netzebw.data.entity.Incident;
import lombok.RequiredArgsConstructor;

@RequiredArgsConstructor
@ApplicationScoped
public class IncidentService {
 
  final IncidentRepositry incidentRepo;
  
  public void create() {
    incidentRepo.persist(Incident.builder().name("Florian").build());
  }
  
  public List<Incident> find() {
    return incidentRepo.listAll();
  }
  
  
  
  
  
}

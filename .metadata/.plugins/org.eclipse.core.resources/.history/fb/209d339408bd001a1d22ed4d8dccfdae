package de.fri;

import org.eclipse.microprofile.openapi.annotations.media.Schema;

import io.quarkus.runtime.annotations.RegisterForReflection;

/**
 * Object to parse some exception which will be pass to the user.
 * 
 * @author fri
 *
 */



@RegisterForReflection
@Schema(description = "Error Objekt")
public class ErrorTO {
  
  @Schema(description = "Fehlercode", required = true)
  private int errorCode;
  
  @Schema(description = "Http Status Code", required = true)
  private int httpStatusCode;
  
  @Schema(description = "Fehlermeldung", required = true)
  private String errorMessage;
  
  @Schema(description = "ID des Aufrufers", required = false)
  private String correlationId;

}

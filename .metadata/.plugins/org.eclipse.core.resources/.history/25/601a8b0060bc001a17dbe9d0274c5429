package de.netzebw.service;

import java.util.List;
import java.util.UUID;

import javax.enterprise.context.ApplicationScoped;
import javax.transaction.Transactional;

import org.apache.commons.lang3.StringUtils;

import de.netzebw.data.IncidentRepositry;
import de.netzebw.data.entity.Incident;
import de.netzebw.to.IncidentTO;
import io.quarkus.runtime.util.StringUtil;
import lombok.RequiredArgsConstructor;

@RequiredArgsConstructor
@ApplicationScoped
public class IncidentService {

  final IncidentRepositry incidentRepo;

  @Transactional
  public void create() {
    incidentRepo.persist(Incident.builder().name("Florian").incidentUuid(UUID.randomUUID().toString()).build());
  }

  public List<Incident> find() {
    return incidentRepo.listAll();
  }

  public void createOrUpdate(final String id, final IncidentTO incident) {

  }

  private Boolean isUuidAndIdEqual(final IncidentTO incident, final String id) {
    return StringUtils.equals(incident.getUuid(), id);

  }

}

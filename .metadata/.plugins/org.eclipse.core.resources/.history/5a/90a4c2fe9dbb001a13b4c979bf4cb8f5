openapi: 3.0.3
info:
   title: Incident Service API
   version: 0.0.1
   description: 'Folgende API wird dazu verwendet um Störungen im #LightOn System zu bearbeiten.'
   contact:
      email: dienstleistung@netze-bw.de #LightOn System zu überführen.'
      name: '#Dienstleistung'
   license:
      name: Netze-BW Lizenz
      url: https://netze-bw.de
servers:
-  url: http://localhost:8080
   description: Lokale Dev Umgebung
-  url: https://lighton.netze-bw.de
   description: Produktiv Umgebung
-  url: https://test.lighton-netze-bw.de
   description: Test Umgebung
externalDocs:
   description: Weitere Informationen zur Strassenbeleuchtung
   url: https://myenbw.sharepoint.com/sites/DLBU1Straenbeleuchtung
tags:
-  name: Incident
   description: Störung




components:
   responses:
      200Ok:
        description: OK
      201Created:
        description: Störung wurde erfolgreich aktualisert bzw. gespeichert
      202Accepted:
         description: Meldung wurde akzeptiert
         content: {}          
      400BadRequest:
         description: Eingangsparameter ungültig
         content:
            application/json:
               schema:
                  $ref: '#/components/schemas/ErrorTO'
                  
      401NotAuthorized:
         description: Keien Berechtigung zur Ausführung vorhanden
         content:
            application/json:
               schema:
                  $ref: '#/components/schemas/ErrorTO'
      404NotFound:
         description: Entität nicht gefunden
         content:
            application/json:
               schema:
                  $ref: '#/components/schemas/ErrorTO'
      412PreconditionFailed:
         description: Systemvorraussetzung nicht erfüllt
         content:
            application/json:
               schema:
                  $ref: '#/components/schemas/ErrorTO'
      415UnsupportedMedia:
         description: Media Type wird nicht unterstützt
      500InternalServerError:
         description: Interner Abarbeitungsfehler
         content:
            application/json:
               schema:
                  $ref: '#/components/schemas/ErrorTO'
    
   securitySchemes:
      ApiKeyAuth:
         type: apiKey
         in: header
         name: x-api-key
   schemas:
      ErrorTO:
         type: object
         properties:
            errorCode:
               type: number
               description: FehlerCode
            statusCode:
               type: number
               description: Http Status Code               
            errorMessage:
               type: string
               description: Fehler Meldung
            externalId:
               type: string
               description: Extern übergebene ID               
            correlationId:
               type: string
               description: Interne Request ID               
         required:
         - errorCode
         - statusCode
         - message

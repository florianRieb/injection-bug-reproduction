package de.netzebw.to;

import javax.validation.constraints.Size;

import org.eclipse.microprofile.openapi.annotations.media.Schema;

import com.fasterxml.jackson.annotation.JsonIgnoreProperties;
import com.fasterxml.jackson.annotation.JsonInclude;

import io.quarkus.runtime.annotations.RegisterForReflection;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@Builder
@NoArgsConstructor
@AllArgsConstructor
@RegisterForReflection
@JsonIgnoreProperties(ignoreUnknown = true)
@JsonInclude(JsonInclude.Include.NON_DEFAULT)
@Schema(description = "Melder der Störung")
public class ReporterTO {

  @Size(max = 36)
  @Schema(description = "V4 UUID des Melders", required = false)
  private String rptUuid;

  @Size(max = 10)
  @Schema(description = "Anrede des Melders", required = false)
  private String salutation;

  @Size(max = 50)
  @Schema(description = "Vorname des Melders", required = false)
  private String firstName;

  @Size(max = 50)
  @Schema(description = "Nachname des Melders", required = false)
  private String lastName;

  @Size(max = 50)
  @Schema(description = "Email Adresse des Melders", required = false)
  private String email;

  @Size(max = 50)
  @Schema(description = "Telefonnummer des Melders", required = false)
  private String phoneNo0;

  @Size(max = 50)
  @Schema(description = "Telefonnummer1 des Melders", required = false)
  private String phoneNo1;

  @Size(max = 50)
  @Schema(description = "Firma des Melders", required = false)
  private String company;

  @Size(max = 50)
  @Schema(description = "Abteilung des Melders", required = false)
  private String department;

  @Size(max = 50)
  @Schema(description = "Straße des Melders", required = false)
  private String street;

  @Size(max = 50)
  @Schema(description = "Hausnummer des Melders", required = false)
  private String houseNo;

  @Size(max = 5)
  @Schema(description = "PLZ des Melders", required = false)
  private String zipCode;

  @Size(max = 50)
  @Schema(description = "Ort des Melders", required = false, example = "Stuttgart")
  private String city;

  @Size(max = 50)
  @Schema(description = "Teilort des Melders", required = false, example = "Möhringen")
  private String cityDistrict;

}
